    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "守丧结束后，大卫便派人把她接进宫里，她就做了大卫的妻子，并给他生了个儿子。然而，大卫的所作所为令耶和华十分不悦。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "守喪期一過，大衛就派人去把拔示巴接到宮裡，她就作了大衛的妻子，給大衛生了一個兒子。大衛所作的這事，耶和華看為惡。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "哀哭的日子過了，大衛差人將她接到宮裏，她就作了大衛的妻，給大衛生了一個兒子。但大衛所行的這事，耶和華甚不喜悅。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "When the time of mourning was over, David sent and brought her to his house and she became his wife; then she bore him a son. But the thing that David had done was evil in the sight of the Lord."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "After the time of mourning was over, David had her brought to his house, and she became his wife and bore him a son. But the thing David had done displeased the Lord."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "When the period of mourning was over, David sent for her and brought her to the palace, and she became one of his wives. Then she gave birth to a son. But the Lord was displeased with what David had done."
      }
