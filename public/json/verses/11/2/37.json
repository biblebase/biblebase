    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "你哪天越过汲沦溪，哪天必死无疑，你的死是咎由自取。”"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "你必須知道，你哪一天出來，越過汲淪溪，你哪一天就要死。你流人血的罪必歸到你自己的頭上。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "你當確實地知道，你何日出來過汲淪溪，何日必死！你的罪必歸到自己的頭上。」"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "For on the day you go out and cross over the brook Kidron, you will know for certain that you shall surely die; your blood shall be on your own head.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "The day you leave and cross the Kidron Valley, you can be sure you will die; your blood will be on your own head.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "On the day you so much as cross the Kidron Valley, you will surely die; and your blood will be on your own head.”"
      }
