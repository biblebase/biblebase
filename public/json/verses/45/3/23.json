    "interpretations": {
      "chenzhongdao": {
        "content": [
          {
            "verse": "rom.3.21-31",
            "paragraphs": [
              "一．因信稱義的真理之解釋（3:21-31）"
            ]
          },
          {
            "verse": "rom.3.22-24",
            "paragraphs": [
              "２．稱義之道怎樣分給人？（3:22-24）"
            ]
