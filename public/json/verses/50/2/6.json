    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "祂虽然本质上是上帝， 却没有紧紧抓住自己与上帝平等的地位不放，"
      },
      "cnv": {
        "version_id": "CNV",
