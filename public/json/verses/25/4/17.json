    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "我们望眼欲穿， 盼望援军的到来， 盼来的国家却无力拯救我们。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "我們徒然等待幫助，等到雙目失去視力； 我們在瞭望臺上期望一個不能拯救我們的國家來臨。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "我們仰望人來幫助， 以致眼目失明，還是枉然； 我們所盼望的，竟盼望一個不能救人的國！"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Yet our eyes failed, Looking for help was useless; In our watching we have watched For a nation that could not save."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Moreover, our eyes failed, looking in vain for help; from our towers we watched for a nation that could not save us."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "We looked in vain for our allies to come and save us, but we were looking to nations that could not help us."
      }
    },
