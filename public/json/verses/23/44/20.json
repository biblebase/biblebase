    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "他们以灰为食，心智迷糊，走入歧途，不能自救，也不会说：“我右手拿的神像不是假的吗？”"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "他所追求的只是灰塵，被迷惑了的心使他偏離正道了； 他不能救自己，也不會說： “在我的右手中不是有個假神嗎？”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "他以灰為食，心中昏迷，使他偏邪，他不能自救，也不能說：「我右手中豈不是有虛謊嗎？」"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "He feeds on ashes; a deceived heart has turned him aside. And he cannot deliver himself, nor say, “Is there not a lie in my right hand?”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Such a person feeds on ashes; a deluded heart misleads him; he cannot save himself, or say, “Is not this thing in my right hand a lie?”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "The poor, deluded fool feeds on ashes. He trusts something that can’t help him at all. Yet he cannot bring himself to ask, “Is this idol that I’m holding in my hand a lie?”"
      }
