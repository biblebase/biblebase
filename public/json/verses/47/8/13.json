      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "For this is not for the ease of others and for your affliction, but by way of equality—"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
