    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "撒母耳到了扫罗那里后，扫罗说：“愿耶和华赐福给你，我已经遵守了耶和华的命令。”"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "撒母耳到了掃羅那裡，掃羅對他說：“願耶和華賜福給你！我已經執行了耶和華的命令。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "撒母耳到了掃羅那裏，掃羅對他說：「願耶和華賜福與你，耶和華的命令我已遵守了。」"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Samuel came to Saul, and Saul said to him, “Blessed are you of the Lord! I have carried out the command of the Lord.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "When Samuel reached him, Saul said, “The Lord bless you! I have carried out the Lord’s instructions.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "When Samuel finally found him, Saul greeted him cheerfully. “May the Lord bless you,” he said. “I have carried out the Lord’s command!”"
      }
