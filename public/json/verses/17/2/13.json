    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "每个女子从女宫到王宫晋见王时，她所要求的一切都要给她。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "那時，少女進去見王是這樣的：從女院到王宮的時候，她所要的都要給她。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "女子進去見王是這樣：從女院到王宮的時候，凡她所要的都必給她。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "the young lady would go in to the king in this way: anything that she desired was given her to take with her from the harem to the king’s palace."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "And this is how she would go to the king: Anything she wanted was given her to take with her from the harem to the king’s palace."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "When it was time for her to go to the king’s palace, she was given her choice of whatever clothing or jewelry she wanted to take from the harem."
      }
