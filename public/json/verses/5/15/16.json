    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "如果你们的奴隶因为爱你们和你们的家人，与你们相处融洽，不愿意离去，"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "如果他對你說：‘我不願離開你。’他說這話是因為他愛你和你的家，又因為他喜歡和你相處，"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "他若對你說：『我不願意離開你』，是因他愛你和你的家，且因在你那裏很好，"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "It shall come about if he says to you, ‘I will not go out from you,’ because he loves you and your household, since he fares well with you;"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "But if your servant says to you, “I do not want to leave you,” because he loves you and your family and is well off with you,"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "“But suppose your servant says, ‘I will not leave you,’ because he loves you and your family, and he has done well with you."
      }
