      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "因為多有智慧，就多有愁煩； 加增知識的，就加增憂傷。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Because in much wisdom there is much grief, and increasing knowledge results in increasing pain."
      },
      "niv": {
