    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "智慧如同金钱， 是一种保障， 能保全智者的生命。 这就是知识的好处。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "因為受智慧的庇護，如同受銀子的庇護。 唯有智慧能保全智慧人的生命，這就是知識的益處。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "因為智慧護庇人， 好像銀錢護庇人一樣。 惟獨智慧能保全智慧人的生命。 這就是知識的益處。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "For wisdom is protection just as money is protection, But the advantage of knowledge is that wisdom preserves the lives of its possessors."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Wisdom is a shelter as money is a shelter, but the advantage of knowledge is this: Wisdom preserves those who have it."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "Wisdom and money can get you almost anything, but only wisdom can save your life."
      }
