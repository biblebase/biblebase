    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "示剑人出城到田间采摘葡萄，踩榨葡萄汁，然后在他们的神庙中欢宴，尽情吃喝，咒诅亚比米勒。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "他們出到田間去，收取葡萄，榨酒，舉行慶祝會，進入他們的神廟吃喝，並且咒詛亞比米勒。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "示劍人出城到田間去，摘下葡萄，踹酒，設擺筵宴，進他們神的廟中吃喝，咒詛亞比米勒。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "They went out into the field and gathered the grapes of their vineyards and trod them, and held a festival; and they went into the house of their god, and ate and drank and cursed Abimelech."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "After they had gone out into the fields and gathered the grapes and trodden them, they held a festival in the temple of their god. While they were eating and drinking, they cursed Abimelek."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "During the annual harvest festival at Shechem, held in the temple of the local god, the wine flowed freely, and everyone began cursing Abimelech."
      }
