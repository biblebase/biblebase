    "interpretations": {
      "dde": {
        "content": [
          {
            "verse": "pro.21.8",
            "paragraphs": [
              "清潔的良心，清潔的途徑（二十一8）",
              "負罪（和合、RSV）的希伯來文是wa{za{r，只有出現在這裏；它的意義是從兩個亞拉伯文字根之一演繹而來的（RV的“裝滿罪咎”同時使用這兩個字根！）。AV（wa{=而；za{r=陌生）營造出一個不通順的對句。"
            ]
          }
        ],
        "title": "丁道爾聖經註釋",
        "author": "丁道爾"
      },
      "leili": {
        "content": [
          {
            "verse": "pro.21.8",
            "paragraphs": [
              "二一8更可作：\"犯罪的人道路彎曲，貧窮的人行為卻正直。\""
            ]
          }
        ],
        "title": "雷厲研讀本聖經",
        "author": "雷厲"
      }
    },
    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "犯罪的人行径扭曲， 纯洁的人行为正直。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "罪人的道路充滿狡詐， 清潔的人，行為正直。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "負罪之人的路甚是彎曲； 至於清潔的人，他所行的乃是正直。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "The way of a guilty man is crooked, But as for the pure, his conduct is upright."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "The way of the guilty is devious, but the conduct of the innocent is upright."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "The guilty walk a crooked path; the innocent travel a straight road."
      }
    },
