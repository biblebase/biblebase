    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "无论贵贱，众人都听从他，称他为“上帝的大能者”。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "城裡大大小小都聽從他，說：“這就是那稱為‘　神的大能’的人。”"
      },
      "csbs": {
        "version_id": "CSBS",
        "version_name": "中文标准译本",
        "lang": "chs",
        "text": "所有的人，从卑微的到尊贵的，都听从他。他们说：“这个人就是那被称为‘神的大能者’的。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "無論大小都聽從他，說：「這人就是那稱為神的大能者。」"
      },
      "esv": {
        "version_id": "ESV",
        "version_name": "English Standard Version",
        "lang": "en",
        "text": "They all paid attention to him, from the least to the greatest, saying, “This man is the power of God that is called Great.”"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "and they all, from smallest to greatest, were giving attention to him, saying, “This man is what is called the Great Power of God.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "and all the people, both high and low, gave him their attention and exclaimed, “This man is rightly called the Great Power of God.”"
      },
      "nkjv": {
        "version_id": "NKJV",
        "version_name": "New King James Version",
        "lang": "en",
        "text": "to whom they all gave heed, from the least to the greatest, saying, “This man is the great power of God.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "Everyone, from the least to the greatest, often spoke of him as “the Great One—the Power of God.”"
      }
