    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "所以我告诉你，她众多的罪都被赦免了，因此她的爱深切；那些获得赦免少的，他们的爱也少。”"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "所以我告訴你，她許多罪都蒙赦免了，因為她的愛多；那赦免少的，愛就少。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "所以我告訴你，她許多的罪都赦免了，因為她的愛多；但那赦免少的，他的愛就少。」"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "For this reason I say to you, her sins, which are many, have been forgiven, for she loved much; but he who is forgiven little, loves little.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Therefore, I tell you, her many sins have been forgiven—as her great love has shown. But whoever has been forgiven little loves little.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "“I tell you, her sins—and they are many—have been forgiven, so she has shown me much love. But a person who is forgiven little shows only little love.”"
      }
