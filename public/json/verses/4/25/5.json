    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "于是，摩西对以色列的审判官说：“你们各自把权下与巴力·毗珥苟合的人处死。”"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "於是摩西對以色列的審判官說：“你們各人要把與巴力．毘珥連合的人都殺了。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "於是摩西吩咐以色列的審判官說：「凡屬你們的人，有與巴力‧毗珥連合的，你們各人要把他們殺了。」"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "So Moses said to the judges of Israel, “Each of you slay his men who have joined themselves to Baal of Peor.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "So Moses said to Israel’s judges, “Each of you must put to death those of your people who have yoked themselves to the Baal of Peor.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "So Moses ordered Israel’s judges, “Each of you must put to death the men under your authority who have joined in worshiping Baal of Peor.”"
      }
