    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "“‘我在旷野曾对他们的子孙说，不要效法你们祖先的律例，不要遵守他们的规条，不要拜他们的偶像，以致玷污自己。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "“‘我在曠野對他們的兒女說：不要遵行你們祖先的律例，不要謹守他們的典章，也不要因他們的偶像玷污自己。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "「我在曠野對他們的兒女說：不要遵行你們父親的律例，不要謹守他們的惡規，也不要因他們的偶像玷污自己。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "“I said to their children in the wilderness, ‘Do not walk in the statutes of your fathers or keep their ordinances or defile yourselves with their idols."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "I said to their children in the wilderness, “Do not follow the statutes of your parents or keep their laws or defile yourselves with their idols."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "“Then I warned their children not to follow in their parents’ footsteps, defiling themselves with their idols."
      }
    },
