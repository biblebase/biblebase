    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "我们的祖先一向都是在这山上敬拜上帝，你们却说耶路撒冷才是敬拜的地方。”"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "我們的祖先在這山上敬拜　神，而你們卻說，敬拜的地方必須在耶路撒冷。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "我們的祖宗在這山上禮拜，你們倒說，應當禮拜的地方是在耶路撒冷。」"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Our fathers worshiped in this mountain, and you people say that in Jerusalem is the place where men ought to worship.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Our ancestors worshiped on this mountain, but you Jews claim that the place where we must worship is in Jerusalem.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "So tell me, why is it that you Jews insist that Jerusalem is the only place of worship, while we Samaritans claim it is here at Mount Gerizim, where our ancestors worshiped?”"
      }
    },
