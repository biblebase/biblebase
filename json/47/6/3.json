      "csbs": {
        "version_id": "CSBS",
        "version_name": "中文标准译本",
        "lang": "chs",
        "text": "我们不在任何事上给任何人跌倒的借口，免得这服事的工作被人挑剔；"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "我們凡事都不叫人有妨礙，免得這職分被人毀謗；"
      },
      "esv": {
        "version_id": "ESV",
        "version_name": "English Standard Version",
        "lang": "en",
        "text": "We put no obstacle in anyone’s way, so that no fault may be found with our ministry,"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "giving no cause for offense in anything, so that the ministry will not be discredited,"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "We put no stumbling block in anyone’s path, so that our ministry will not be discredited."
      },
      "nkjv": {
        "version_id": "NKJV",
        "version_name": "New King James Version",
        "lang": "en",
        "text": "We give no offense in anything, that our ministry may not be blamed."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "We live in such a way that no one will stumble because of us, and no one will find fault with our ministry."
      }
    },
