      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "如果我以惡回報那與我為友的人， 或是無故掠奪與我為敵的人，"
      },
      "csbs": {
        "version_id": "CSBS",
        "version_name": "中文标准译本",
        "lang": "chs",
        "text": "如果我恶待那与我和好的人， 或是无故掠夺我的敌人，"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "我若以惡報那與我交好的人－ 連那無故與我為敵的，我也救了他，"
      },
      "esv": {
        "version_id": "ESV",
        "version_name": "English Standard Version",
        "lang": "en",
        "text": "if I have repaid my friend with evil or plundered my enemy without cause,"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "If I have rewarded evil to my friend, Or have plundered him who without cause was my adversary,"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "if I have repaid my ally with evil or without cause have robbed my foe—"
