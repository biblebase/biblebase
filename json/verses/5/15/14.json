    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "要慷慨地把你们的上帝耶和华赐给你们的羊、五谷和酒分给他们。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "要從你的羊群、禾場、榨酒池中，多多地供給他；耶和華你的　神怎樣賜福給你，你也要怎樣分給他。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "要從你羊羣、禾場、酒醡之中多多地給他；耶和華－你的神怎樣賜福與你，你也要照樣給他。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "You shall furnish him liberally from your flock and from your threshing floor and from your wine vat; you shall give to him as the Lord your God has blessed you."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Supply them liberally from your flock, your threshing floor and your winepress. Give to them as the Lord your God has blessed you."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "Give him a generous farewell gift from your flock, your threshing floor, and your winepress. Share with him some of the bounty with which the Lord your God has blessed you."
      }
