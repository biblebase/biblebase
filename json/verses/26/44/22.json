      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "And they shall not marry a widow or a divorced woman but shall take virgins from the offspring of the house of Israel, or a widow who is the widow of a priest."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "They must not marry widows or divorced women; they may marry only virgins of Israelite descent or widows of priests."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "They may choose their wives only from among the virgins of Israel or the widows of the priests. They may not marry other widows or divorced women."
      }
