      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "各樣事務成就都有時候和定理，因為人的苦難重壓在他身上。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "For there is a proper time and procedure for every delight, though a man’s trouble is heavy upon him."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "For there is a proper time and procedure for every matter, though a person may be weighed down by misery."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "for there is a time and a way for everything, even when a person is in trouble."
      }
