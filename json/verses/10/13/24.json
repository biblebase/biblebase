      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Absalom came to the king and said, “Behold now, your servant has sheepshearers; please let the king and his servants go with your servant.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Absalom went to the king and said, “Your servant has had shearers come. Will the king and his attendants please join me?”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "He went to the king and said, “My sheep-shearers are now at work. Would the king and his servants please come to celebrate the occasion with me?”"
      }
