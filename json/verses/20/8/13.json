      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "敬畏耶和華就是恨惡邪惡； 驕傲、狂妄、邪惡的行為、 乖謬的口，我都恨惡。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "敬畏耶和華在乎恨惡邪惡； 那驕傲、狂妄，並惡道， 以及乖謬的口，都為我所恨惡。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "The fear of the Lord is to hate evil; Pride and arrogance and the evil way And the perverted mouth, I hate."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "To fear the Lord is to hate evil; I hate pride and arrogance, evil behavior and perverse speech."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "All who fear the Lord will hate evil. Therefore, I hate pride and arrogance, corruption and perverse speech."
      }
