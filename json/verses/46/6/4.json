    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "如果你们有什么纠纷，你们会指派不受教会敬重的人来审理吗？"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "你們既然要審判今生的事，為甚麼讓教會不重視的人來審判呢？"
      },
      "csbs": {
        "version_id": "CSBS",
        "version_name": "中文标准译本",
        "lang": "chs",
        "text": "因此，你们如果真有今生的事要审理，难道让被教会所藐视的这些人来审吗？"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "既是這樣，你們若有今生的事當審判，是派教會所輕看的人審判嗎？"
      },
      "esv": {
        "version_id": "ESV",
        "version_name": "English Standard Version",
        "lang": "en",
        "text": "So if you have such cases, why do you lay them before those who have no standing in the church?"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "So if you have law courts dealing with matters of this life, do you appoint them as judges who are of no account in the church?"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Therefore, if you have disputes about such matters, do you ask for a ruling from those whose way of life is scorned in the church?"
      },
      "nkjv": {
        "version_id": "NKJV",
        "version_name": "New King James Version",
        "lang": "en",
        "text": "If then you have judgments concerning things pertaining to this life, do you appoint those who are least esteemed by the church to judge?"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "If you have legal disputes about such matters, why go to outside judges who are not respected by the church?"
      }
    },
