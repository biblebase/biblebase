    "interpretations": {
      "dde": {
        "content": [
          {
            "verse": "1ki.8.22-61",
            "paragraphs": [
              "c.所羅門的獻殿禱告（八22～61）",
              "這個禱告不僅是為了他自己而獻，也是為了王室家族及全國而獻，要提醒他們記得聖殿真正的意義是彰顯神的同在，即使當他們面對逆境時仍不例外。"
            ]
          },
          {
            "verse": "1ki.8.22-31",
            "paragraphs": [
              "(1)來到神面前（八22～31）"
            ]
          }
        ],
        "title": "丁道爾聖經註釋",
        "author": "丁道爾"
      },
      "fengsheng": {
        "content": [
          {
            "verse": "1ki.8.29",
            "paragraphs": [
              "8:29",
              "你名：神的名代表他的同在、位格和榮耀。"
            ]
          }
        ],
        "title": "豐盛生命研讀本"
      },
      "leili": {
        "content": [
          {
            "verse": "1ki.8.23-53",
            "paragraphs": [
              "八23～53所羅門偉大的禱告（比他先前的講話長得多！）以感恩開始，他為了神獨一無二（23節上）和信實的應許（23下、24節；關於\"慈愛\"，參看何二19的腳註）而感謝神。跟他求神繼續同在和看顧（25～30節）；繼續表明祂的聖潔（31,32節）；求得赦罪、復興，以及在痛苦的時候，因他的認罪而施行救助（33～40節）；求祂垂聽\"外邦人\"的禱告（41～43節；希伯來文是nokri，不是指定居的外地人，而是來敬拜神的非以色列人）；祈求在戰爭中得勝（44,45節）；以及從被擄之地領回（46～53節）。第47節用三個不同的字來談及罪：\"有罪了\"（失敗了）；\"悖逆了\"（故意不順服）；\"作惡了\"（不能符合真正的標準）。"
            ]
          }
        ],
        "title": "雷厲研讀本聖經",
        "author": "雷厲"
      }
    },
    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "愿你昼夜看顾这殿——你应许立你名的地方！你仆人向着这地方祷告的时候，求你垂听。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "願你的眼睛晝夜看顧這殿，看顧你所說‘我的名要留在那裡’的地方。願你垂聽你僕人向這地方所發的禱告。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "願你晝夜看顧這殿，就是你應許立為你名的居所；求你垂聽僕人向此處禱告的話。"
      },
      "esv": {
        "version_id": "ESV",
        "version_name": "English Standard Version",
        "lang": "en",
        "text": "that your eyes may be open night and day toward this house, the place of which you have said, ‘My name shall be there,’ that you may listen to the prayer that your servant offers toward this place."
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "that Your eyes may be open toward this house night and day, toward the place of which You have said, ‘My name shall be there,’ to listen to the prayer which Your servant shall pray toward this place."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "May your eyes be open toward this temple night and day, this place of which you said, ‘My Name shall be there,’ so that you will hear the prayer your servant prays toward this place."
      },
      "nkjv": {
        "version_id": "NKJV",
        "version_name": "New King James Version",
        "lang": "en",
        "text": "that Your eyes may be open toward this temple night and day, toward the place of which You said, ‘My name shall be there,’ that You may hear the prayer which Your servant makes toward this place."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "May you watch over this Temple night and day, this place where you have said, ‘My name will be there.’ May you always hear the prayers I make toward this place."
      }
