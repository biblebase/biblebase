      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "便．哈達又差派人去見亞哈說：“撒瑪利亞的塵土若是足夠跟從我的人每人捧一捧的話，願神明懲罰我，並且加倍懲罰我。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "便‧哈達又差遣人去見亞哈說：「撒馬利亞的塵土若夠跟從我的人每人捧一捧的，願神明重重地降罰與我！」"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Ben-hadad sent to him and said, “May the gods do so to me and more also, if the dust of Samaria will suffice for handfuls for all the people who follow me.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Then Ben-Hadad sent another message to Ahab: “May the gods deal with me, be it ever so severely, if enough dust remains in Samaria to give each of my men a handful.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "Then Ben-hadad sent this message to Ahab: “May the gods strike me and even kill me if there remains enough dust from Samaria to provide even a handful for each of my soldiers.”"
      }
