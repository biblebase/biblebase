      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "恨惡公平的真的可以掌權嗎？ 那有公義與大能的，你定他為有罪嗎？"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "難道恨惡公平的可以掌權嗎？ 那有公義的、有大能的，豈可定他有罪嗎？"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Shall one who hates justice rule? And will you condemn the righteous mighty One,"
      },
