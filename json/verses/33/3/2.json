    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "你们憎恶良善， 喜爱邪恶， 剥下我百姓的皮， 从他们的骨头上剔肉。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "然而，你們恨惡良善，喜愛邪惡， 從人身上剝皮， 從人骨頭上剔肉。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "你們惡善好惡， 從人身上剝皮， 從人骨頭上剔肉，"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "You who hate good and love evil, Who tear off their skin from them And their flesh from their bones,"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "you who hate good and love evil; who tear the skin from my people and the flesh from their bones;"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "but you are the very ones who hate good and love evil. You skin my people alive and tear the flesh from their bones."
      }
    },
