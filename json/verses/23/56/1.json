    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "耶和华说： “你们当坚持正义， 秉行公义， 因为我的救恩快要来临， 我的公义快要彰显。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "耶和華這樣說： “你們要持守公平，實行公義； 因為我的拯救快要來到， 我的公義快要顯現了。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "耶和華如此說： 你們當守公平，行公義； 因我的救恩臨近， 我的公義將要顯現。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Thus says the Lord, “Preserve justice and do righteousness, For My salvation is about to come And My righteousness to be revealed."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "This is what the Lord says: “Maintain justice and do what is right, for my salvation is close at hand and my righteousness will soon be revealed."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "This is what the Lord says: “Be just and fair to all. Do what is right and good, for I am coming soon to rescue you and to display my righteousness among you."
      }
