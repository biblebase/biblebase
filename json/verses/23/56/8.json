    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "招聚以色列流亡者的主耶和华说： “除了这些被招聚回来的人以外， 我还要招聚其他人。”"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "主耶和華，就是招聚以色列被趕散的人的，說： “在以色列這些已經被招聚的人以外，我還要招聚別的人歸給他們。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "主耶和華， 就是招聚以色列被趕散的，說： 在這被招聚的人以外， 我還要招聚別人歸併他們。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "The Lord God, who gathers the dispersed of Israel, declares, “Yet others I will gather to them, to those already gathered.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "The Sovereign Lord declares— he who gathers the exiles of Israel: “I will gather still others to them besides those already gathered.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "For the Sovereign Lord, who brings back the outcasts of Israel, says: I will bring others, too, besides my people Israel.”"
      }
