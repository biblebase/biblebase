    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "他们贪婪的罪恶使我发怒， 我惩罚他们，愤怒地转脸不理他们， 他们却怙恶不悛。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "因他貪婪的罪孽，我發怒了； 我擊打他，向他掩面，並且發怒， 他仍然隨著自己的心意背道。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "因他貪婪的罪孽，我就發怒擊打他； 我向他掩面發怒， 他卻仍然隨心背道。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Because of the iniquity of his unjust gain I was angry and struck him; I hid My face and was angry, And he went on turning away, in the way of his heart."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "I was enraged by their sinful greed; I punished them, and hid my face in anger, yet they kept on in their willful ways."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "I was angry, so I punished these greedy people. I withdrew from them, but they kept going on their own stubborn way."
      }
    },
