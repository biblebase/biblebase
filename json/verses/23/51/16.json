      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "我把我的話放在你的口裡， 用我的手影蔽護你， 好立定諸天，奠定大地的根基， 對錫安說：‘你是我的子民。’”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "我將我的話傳給你， 用我的手影遮蔽你， 為要栽定諸天，立定地基， 又對錫安說：你是我的百姓。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "I have put My words in your mouth and have covered you with the shadow of My hand, to establish the heavens, to found the earth, and to say to Zion, ‘You are My people.’ ”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "I have put my words in your mouth and covered you with the shadow of my hand— I who set the heavens in place, who laid the foundations of the earth, and who say to Zion, ‘You are my people.’ ”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "And I have put my words in your mouth and hidden you safely in my hand. I stretched out the sky like a canopy and laid the foundations of the earth. I am the one who says to Israel, ‘You are my people!’”"
      }
