    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "他们诬陷人， 暗算审判官， 冤枉无辜。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "他們只用一句話就定了人的罪， 又設下網羅來陷害城門口那執行裁判的， 用毫無根據的事屈枉義人。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "他們在爭訟的事上定無罪的為有罪， 為城門口責備人的設下網羅， 用虛無的事屈枉義人。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Who cause a person to be indicted by a word, And ensnare him who adjudicates at the gate, And defraud the one in the right with meaningless arguments."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "those who with a word make someone out to be guilty, who ensnare the defender in court and with false testimony deprive the innocent of justice."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "Those who convict the innocent by their false testimony will disappear. A similar fate awaits those who use trickery to pervert justice and who tell lies to destroy the innocent."
      }
