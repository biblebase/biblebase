      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "“As you summon to a feast day, so you summoned against me terrors on every side. In the day of the Lord’s anger no one escaped or survived; those I cared for and reared my enemy has destroyed.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
