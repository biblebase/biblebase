    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "“人们听见我的哀叹， 却无人安慰我。 敌人看见你降给我的灾难， 都幸灾乐祸。 愿你应许的审判之日来临， 叫他们像我一样受苦！"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "有人聽見我的唉哼，卻沒有人安慰我， 我所有的仇敵都聽見我的災難；你作了這事，他們就歡樂。 願你使你所宣告的日子來臨那時，他們就必像我一樣。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "聽見我歎息的有人； 安慰我的卻無人！ 我的仇敵都聽見我所遭的患難； 因你做這事，他們都喜樂。 你必使你報告的日子來到， 他們就像我一樣。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "They have heard that I groan; There is no one to comfort me; All my enemies have heard of my calamity; They are glad that You have done it. Oh, that You would bring the day which You have proclaimed, That they may become like me."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "“People have heard my groaning, but there is no one to comfort me. All my enemies have heard of my distress; they rejoice at what you have done. May you bring the day you have announced so they may become like me."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "“Others heard my groans, but no one turned to comfort me. When my enemies heard about my troubles, they were happy to see what you had done. Oh, bring the day you promised, when they will suffer as I have suffered."
      }
