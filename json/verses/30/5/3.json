    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "因为主耶和华说： “以色列家的城邑中， 出兵一千的，只有百人生还； 出兵一百的，只有十人生还。”"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "因為主耶和華論以色列家這樣說： “這城派兵一千， 剩下的只有一百； 出兵一百， 只剩下十個。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "主耶和華如此說： 以色列家的城發出一千兵的，只剩一百； 發出一百的，只剩十個。"
      },
      "esv": {
        "version_id": "ESV",
        "version_name": "English Standard Version",
        "lang": "en",
        "text": "For thus says the Lord God: “The city that went out a thousand shall have a hundred left, and that which went out a hundred shall have ten left to the house of Israel.”"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "For thus says the Lord God, “The city which goes forth a thousand strong Will have a hundred left, And the one which goes forth a hundred strong Will have ten left to the house of Israel.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "This is what the Sovereign Lord says to Israel: “Your city that marches out a thousand strong will have only a hundred left; your town that marches out a hundred strong will have only ten left.”"
      },
      "nkjv": {
        "version_id": "NKJV",
        "version_name": "New King James Version",
        "lang": "en",
        "text": "For thus says the Lord God: “The city that goes out by a thousand Shall have a hundred left, And that which goes out by a hundred Shall have ten left to the house of Israel.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "The Sovereign Lord says: “When a city sends a thousand men to battle, only a hundred will return. When a town sends a hundred, only ten will come back alive.”"
      }
    },
