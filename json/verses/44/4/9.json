    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "如果因为那残疾的乞丐得到医治这件善事，你们今天来查问我们他是如何痊愈的，"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "我們今天受審，如果是為了在那殘疾人身上所行的善事，就是這個人怎麼會好的，"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "「治民的官府和長老啊，倘若今日因為在殘疾人身上所行的善事查問我們他是怎麼得了痊癒，"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "if we are on trial today for a benefit done to a sick man, as to how this man has been made well,"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "If we are being called to account today for an act of kindness shown to a man who was lame and are being asked how he was healed,"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "are we being questioned today because we’ve done a good deed for a crippled man? Do you want to know how he was healed?"
      }
