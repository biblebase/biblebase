    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "但耶和华因祂仆人大卫的缘故而不愿毁灭犹大，因为祂曾应许让大卫的子孙永远做王。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "但耶和華因他僕人大衛的緣故不願毀滅猶大，卻要照他應許大衛的，賜給他和他的後裔永遠有燈光延續。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "耶和華卻因他僕人大衛的緣故，仍不肯滅絕猶大，照他所應許大衛的話，永遠賜燈光與他的子孫。"
      },
      "esv": {
        "version_id": "ESV",
        "version_name": "English Standard Version",
        "lang": "en",
        "text": "Yet the Lord was not willing to destroy Judah, for the sake of David his servant, since he promised to give a lamp to him and to his sons forever."
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "However, the Lord was not willing to destroy Judah, for the sake of David His servant, since He had promised him to give a lamp to him through his sons always."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Nevertheless, for the sake of his servant David, the Lord was not willing to destroy Judah. He had promised to maintain a lamp for David and his descendants forever."
      },
      "nkjv": {
        "version_id": "NKJV",
        "version_name": "New King James Version",
        "lang": "en",
        "text": "Yet the Lord would not destroy Judah, for the sake of His servant David, as He promised him to give a lamp to him and his sons forever."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "But the Lord did not want to destroy Judah, for he had promised his servant David that his descendants would continue to rule, shining like a lamp forever."
      }
    },
