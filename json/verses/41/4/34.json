    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "祂总是用比喻对他们讲论，只有单独和门徒在一起的时候，才把一切解释清楚。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "不用比喻，就不對他們講。只有單獨和自己的門徒在一起的時候，才把一切解釋給他們聽。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "若不用比喻，就不對他們講；沒有人的時候，就把一切的道講給門徒聽。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "and He did not speak to them without a parable; but He was explaining everything privately to His own disciples."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "He did not say anything to them without using a parable. But when he was alone with his own disciples, he explained everything."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "In fact, in his public ministry he never taught without using parables; but afterward, when he was alone with his disciples, he explained everything to them."
      }
    },
