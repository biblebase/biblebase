    "interpretations": {
      "fengsheng": {
        "content": [
          {
            "verse": "psa.50.16",
            "paragraphs": [
              "50:16",
              "16~23你怎敢傳說我的律例：神在此嚴厲警告百姓中那些邪惡偽善的人；他們假意敬虔、口稱蒙受了救贖之約和神話語的祝福，但同時卻無視神公義的誡命，又效法世俗的不義和邪惡，神說要把他們撕碎(22節)。末後他們必不蒙拯救(22節)，而且還要遭受更大的咒詛(太23:14；參林前11:27註)。"
            ]
          }
        ],
        "title": "豐盛生命研讀本"
      }
    },
    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "但上帝对恶人说： “你怎能背诵我的律法， 谈论我的约？"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "但　神對惡人說： “你怎麼敢述說我的律例， 你的口怎麼敢提到我的約呢？"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "但神對惡人說：你怎敢傳說我的律例， 口中提到我的約呢？"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "But to the wicked God says, “What right have you to tell of My statutes And to take My covenant in your mouth?"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "But to the wicked person, God says: “What right have you to recite my laws or take my covenant on your lips?"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "But God says to the wicked: “Why bother reciting my decrees and pretending to obey my covenant?"
      }
    },
