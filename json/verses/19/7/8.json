      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "願耶和華審判萬民。 耶和華啊！求你按著我的公義， 照著我心中的正直判斷我。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "耶和華向眾民施行審判； 耶和華啊，求你按我的公義和我心中的純正判斷我。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "The Lord judges the peoples; Vindicate me, O Lord, according to my righteousness and my integrity that is in me."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "Let the Lord judge the peoples. Vindicate me, Lord, according to my righteousness, according to my integrity, O Most High."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "The Lord judges the nations. Declare me righteous, O Lord, for I am innocent, O Most High!"
      }
