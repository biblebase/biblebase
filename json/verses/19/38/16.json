    "interpretations": {
      "dde": {
        "content": [
          {
            "verse": "psa.38.15-22",
            "paragraphs": [
              "唯一的希望（三十八15～22）",
              "大衛等候（15節，和合：仰望）神的能耐，遠勝眾人。他流亡的年日，在希伯侖的時期，及對押沙龍叛變的態度，都證明他在第15、16節的禱告是真心的，也證實他在第三十七篇的忠告。"
            ]
          }
        ],
        "title": "丁道爾聖經註釋",
        "author": "丁道爾"
      }
    },
    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "我曾求告你， 别让他们幸灾乐祸， 在我失脚时沾沾自喜。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "因為我曾說：“恐怕他們向我誇耀； 我的腳滑跌的時候，不要讓他們向我誇口。”"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "我曾說：恐怕他們向我誇耀； 我失腳的時候，他們向我誇大。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "For I said, “May they not rejoice over me, Who, when my foot slips, would magnify themselves against me.”"
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "For I said, “Do not let them gloat or exalt themselves over me when my feet slip.”"
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "I prayed, “Don’t let my enemies gloat over me or rejoice at my downfall.”"
      }
    },
