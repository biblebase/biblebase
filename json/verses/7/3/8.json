    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "耶和华向他们发怒，把他们交在美索不达米亚王古珊·利萨田的手中，受古珊·利萨田统治八年。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "因此，耶和華的怒氣向以色列人發作，把他們完全交在兩河之間的亞蘭王古珊．利薩田的手中；以色列人服事了古珊．利薩田八年。"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "所以耶和華的怒氣向以色列人發作，就把他們交在美索不達米亞王古珊‧利薩田的手中。以色列人服事古珊‧利薩田八年。"
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "Then the anger of the Lord was kindled against Israel, so that He sold them into the hands of Cushan-rishathaim king of Mesopotamia; and the sons of Israel served Cushan-rishathaim eight years."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "The anger of the Lord burned against Israel so that he sold them into the hands of Cushan-Rishathaim king of Aram Naharaim, to whom the Israelites were subject for eight years."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "Then the Lord burned with anger against Israel, and he turned them over to King Cushan-rishathaim of Aram-naharaim. And the Israelites served Cushan-rishathaim for eight years."
      }
