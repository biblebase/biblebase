    "versions": {
      "ccb": {
        "version_id": "CCB",
        "version_name": "圣经当代译本",
        "lang": "chs",
        "text": "“你已经听见了，看看这一切， 难道你还不承认吗？ 现在我要把新事，把你不知道的隐秘事告诉你。"
      },
      "cnv": {
        "version_id": "CNV",
        "version_name": "新譯本",
        "lang": "cht",
        "text": "你已經聽見了，現在要注意這一切事。 難道你不述說嗎？ 從今以後，我要把新的事， 就是你不知道的隱祕的事，告訴你。"
      },
      "csbs": {
        "version_id": "CSBS",
        "version_name": "中文标准译本",
        "lang": "chs",
        "text": "你已经听见了， 就当观看这一切！ 难道你还不宣告吗？ 从今以后，我要告知你新的事， 就是你所不知道的隐秘事——"
      },
      "cunp": {
        "version_id": "CUNP",
        "version_name": "和合本新標點（神版）",
        "lang": "cht",
        "text": "你已經聽見，現在要看見這一切； 你不說明嗎？ 從今以後，我將新事， 就是你所不知道的隱密事指示你。"
      },
      "esv": {
        "version_id": "ESV",
        "version_name": "English Standard Version",
        "lang": "en",
        "text": "“You have heard; now see all this; and will you not declare it? From this time forth I announce to you new things, hidden things that you have not known."
      },
      "nasb": {
        "version_id": "NASB",
        "version_name": "New American Standard Bible",
        "lang": "en",
        "text": "You have heard; look at all this. And you, will you not declare it? I proclaim to you new things from this time, Even hidden things which you have not known."
      },
      "niv": {
        "version_id": "NIV",
        "version_name": "New International Version",
        "lang": "en",
        "text": "You have heard these things; look at them all. Will you not admit them? “From now on I will tell you of new things, of hidden things unknown to you."
      },
      "nkjv": {
        "version_id": "NKJV",
        "version_name": "New King James Version",
        "lang": "en",
        "text": "“You have heard; See all this. And will you not declare it? I have made you hear new things from this time, Even hidden things, and you did not know them."
      },
      "nlt": {
        "version_id": "NLT",
        "version_name": "New Living Translation",
        "lang": "en",
        "text": "You have heard my predictions and seen them fulfilled, but you refuse to admit it. Now I will tell you new things, secrets you have not yet heard."
      }
    },
